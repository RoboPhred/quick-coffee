{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom", "es2015.promise"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../lib",
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "../node_modules",
    "paths": {
      "@/*": ["../src/*"]
    }
  }
}
